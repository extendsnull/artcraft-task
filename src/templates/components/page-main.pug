mixin card-available
  article.card.card--available
    .card__layout
      img.card__preview(
        src="img/preview.png",
        width="500",
        height="500",
        alt="")
      .card__body
        header.card__header
          p.card__title.card__title--has-counter
            | #[span.card__title-counter 08.] #[b Техника] #[br]в&nbsp;ZModeller
          a.card__thumb-wrapper(href="/")
            img.card__thumb(
              src="img/thumb.jpg",
              width="50",
              height="50",
              alt="John Smith")
        p.card__description Изучение ZModeller для применения к&nbsp;тяжелой технике
        p.card__time 2 часа
        .card__status
    .card__footer
      p Завершено на&nbsp;50%
      a.card__continue(href="/")
        b Продолжить

