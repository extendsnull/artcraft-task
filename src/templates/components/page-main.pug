mixin card-timer
  article.card
    .card__layout
      img.card__preview(
        src="img/preview.png",
        width="500",
        height="500",
        alt="")
      .card__body
        header.card__header
          p.card__title #[b Онлайн встреча] #[br]4 неделя
        .card__timer.timer
          p #[b 3 дня]
          p 16:56:22
        p.card__description Онлайн-встреча 4&nbsp;недели. Фидбек и&nbsp;обсуждение ZModeller
        p.card__time &plusmn;2 часа
        .card__status
    .card__footer
      p #[b до&nbsp;встречи осталось 3&nbsp;дня 16ч. 56м.]

